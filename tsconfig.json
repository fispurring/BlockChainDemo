{
  "compilerOptions": {
    "target": "ES2020",                          // 编译后的 JavaScript 版本
    "module": "CommonJS",                        // 使用 CommonJS 模块系统（Node.js 默认）
    "strict": false,                              // 启用严格模式
    "esModuleInterop": true,                     // 允许与 CommonJS 模块互操作
    "skipLibCheck": true,                        // 跳过类型声明文件检查
    "forceConsistentCasingInFileNames": true,    // 强制文件名一致性
    "outDir": "./dist",                          // 编译输出目录
    "rootDir": "./src",                          // 源代码目录
    "resolveJsonModule": true,                   // 支持导入 JSON 文件
    "moduleResolution": "node",                 // 使用 Node.js 模块解析
    "typeRoots": ["./node_modules/@types"],      // 类型声明文件路径
    "lib": ["ES2020"]                            // 使用的库
  },
  "include": ["src/**/*"],                       // 包含的文件
  "exclude": ["node_modules", "dist"]            // 排除的文件
}